<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="400dp"
    android:background="@drawable/dialog_background"
    android:paddingLeft="30dp"
    android:paddingRight="30dp" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:text="사진 촬영이 끝나셨나요?"
        android:textColor="@color/white"
        android:textSize="22sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/photodialog_continue_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/photodialog_continue_btn" />

        <ImageView
            android:id="@+id/photodialog_again_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/photodialog_again_btn" />

        <ImageView
            android:id="@+id/photodialog_result_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/photodialog_result_btn" />
    </LinearLayout>

</RelativeLayout>